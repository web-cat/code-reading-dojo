{{ember-notify messageStyle='bootstrap' classPrefix="custom-notify"}}

<div class="jumbotron text-center">
  {{#link-to 'new'}}
    <img id="new-logo" src="assets/images/logo.png">
  {{/link-to}}
  <h1 id="index-title">CodeReadingDojo</h1>
  <h4>Sign in to CodeReadingDojo</h4>
    <div class="form-horizontal form-group form-group-lg row">
        <div id="signin-container" class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-4 col-md-offset-4">
            <form {{action 'authenticate' on='submit'}}>
              <p class="user-pass">Email:</p>
              {{input type="email" value=email class="form-control" placeholder="Email" autofocus="autofocus"}}

              <p class="user-pass">password:</p>
              {{input type="password" value=password class="form-control" placeholder="Password" autofocus="autofocus"}}

              <button id="index-button" class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
              {{#link-to 'signup' id="signup-login"}}
                Sign Up
              {{/link-to}}
            </form>

        </div>
    </div>

</div>
