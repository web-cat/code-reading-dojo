<nav>
  <!-- {{#link-to 'index' classNames='navbar-brand'}}
    Home
  {{/link-to}} -->
  {{#if session.isAuthenticated}}
    <p>Signed in as {{session.data.email}}</p>
  {{else}}
    <button onclick={{action 'login'}}>Login</button>
  {{/if}}
</nav>


<div class="jumbotron text-center">
<img id="new-logo" src="assets/images/logo.png" >
<p>Select an excercise you want to play</p>
  <div class="form-horizontal form-group form-group-lg row">

    <div class="levels">
      {{#each model as |p|}}
        {{#if (eq p.difficulty 'beginner')}}
        {{#if (gt session.data.level p.level)}}
          {{#link-to 'programs' p.level}}
            <img class="item-completed" id={{p.level}} src={{concat (concat "assets/images/beginner/" p.level) ".png"}}>
          {{/link-to}}
          {{else}}
          {{#link-to 'programs' p.level}}
            <img class="item-notcompleted" id={{p.level}} src={{concat (concat "assets/images/beginner/" p.level) ".png"}}>
          {{/link-to}}
        {{/if}}
        {{/if}}
      {{/each}}

      {{#each model as |p|}}
        {{#if (eq p.difficulty 'intermediate')}}
          {{#if (gt session.data.level p.level)}}
            {{#link-to 'programs' p.level}}
              <img class="item-completed" id={{p.level}} src={{concat (concat "assets/images/intermediate/" p.level) ".png"}}>
            {{/link-to}}
          {{else}}
            {{#link-to 'programs' p.level class="item-notcompleted"}}
              <img class="item-notcompleted" id={{p.level}} src={{concat (concat "assets/images/intermediate/" p.level) ".png"}}>
            {{/link-to}}
          {{/if}}
        {{/if}}
      {{/each}}

      {{#each model as |p|}}
        {{#if (eq p.difficulty 'advanced')}}
          {{#if (gt session.data.level p.level)}}
            {{#link-to 'programs' p.level}}
                <img class="item-completed" id={{p.level}} src={{concat (concat "assets/images/advanced/" p.level) ".png"}}>
            {{/link-to}}
          {{else}}
            {{#link-to 'programs' p.level}}
                <img class="item-notcompleted" id={{p.level}} src={{concat (concat "assets/images/advanced/" p.level) ".png"}}>
            {{/link-to}}
          {{/if}}
        {{/if}}
      {{/each}}
    </div>

    {{#link-to 'survey' class="btn btn-primary" id="survey"}}
      Survey
    {{/link-to}}
    {{#link-to 'info' class="btn btn-primary" }}
      Info
    {{/link-to}}
    </div>
</div>
